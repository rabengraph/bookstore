{% extends 'twig/layouts/main.twig' %}

{% block main %}
    <div id="blog" class="wrapper">
        <div class="bks-title-box">
            {% if title is defined and title is not empty %}
                <h1>{{ title }}</h1>
            {% else %}
                <h1>{{ __("Latest News", constant('THEME_TEXTDOMAIN')) }}</h1>
            {% endif %}
        </div>
        <div id="news" class="clearfix">
            <!-- Articles -->
            {% if articles is not empty %}
                <div id="news--articles">
                    {% for article in articles %}
                        <article>
                            <div class="article--date">
                                <span>{{ article.date.format('j F Y') }}</span>
                            </div>
                            <a href="{{ article.link }}" class="article--title"><h2>{{ article.title }}</h2></a>
                            {% if article.featuredImage %}
                                <img src="{{ article.featuredImage.sizes.postThumbnail.url}}"/>
                            {% endif %}
                            <div class="article--excerpt clearfix">
                                <div class="article--excerpt__content">
                                    <p>{{ article.excerpt }}</p>
                                    <a href="{{ article.link }}" class="tiny-button yellow">{{ __("Read more", constant('THEME_TEXTDOMAIN')) }}</a>
                                </div>
                            </div>
                        </article>
                    {% endfor %}
                </div>
            {% else %}
                <p>{{ __("Sorry, no articles available", constant('THEME_TEXTDOMAIN')) }}</p>
            {% endif %}
            <!-- End articles -->
            <!-- Sidebar -->
            <div id="news--sidebar">
                <div class="sidebar">
                    {{ dynamic_sidebar('blog-sidebar') }}
                </div>
            </div>
            <!-- End Sidebar -->
        </div>
    </div>
{% endblock %}